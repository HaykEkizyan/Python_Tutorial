#1. 

def user():
    print("Good afternnon")
    print("Good evening")
print("Good morning")
user()
print("Good night")

"""
Good morning
Good afternnon
Good evening
Good night
"""

#2. With parameters

def user(name):
    print("Good afternnon " + name)
    print("Good evening " + name)
print("Good morning")
user("Hayk")
print("Good night")

"""
Good morning 
Good afternnon Hayk
Good evening Hayk
Good night
"""

#3. 

def user(name):
    print("Good afternnon " + name)
    print("Good evening " + name)
print("Good morning")
user("Hayk")
user("Anna")
print("Good night")

"""
Good morning
Good afternnon Hayk
Good evening Hayk
Good afternnon Anna
Good evening Anna
Good night
"""
